<!DOCTYPE html>
<html>

<head>
    <title>Live Exam</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark fixed py-3 px-0 text-light">
        <div class="container">
            <h1>Live Test</h1>
            <div id="timer" class="mb-3"></div>
            <div class="align-top">
                <button type="submit" class="btn btn-danger mt-3 ml-3">Submit</button>
            </div>
        </div>
    </nav>
    <div class="container my-5">
        <form id="examForm">
            <% for (var i=0; i < questions.length; i++) { %>
                <div class="card my-3">
                    <div class="card-header bg-warning">
                        Question <%= i + 1 %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= questions[i].question %>
                        </h5>
                        <% for (var j=0; j < questions[i].options.length; j++) { %>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="question<%= i %>"
                                    id="option<%= i + 1 %>-<%= j + 1 %>" value="<%= questions[i].options[j] %>">
                                <label class="form-check-label" for="option<%= i + 1 %>-<%= j + 1 %>">
                                    <%= questions[i].options[j] %>
                                </label>
                            </div>
                            <% } %>
                    </div>
                </div>
                <% } %>
                <!-- <button type="button" class="btn btn-primary mt-3" id="nextQuestionBtn">Next Question</button> -->
        </form>
    </div>

    <script>
        // JavaScript code to handle next question button, timer, and submission
        $(document).ready(function() {
            var currentQuestion = 0;
            var totalQuestions = <%= questions.length %>;
            var startTime = new Date().getTime(); // Start time in milliseconds
            var timeLimit = 600; // Total time limit in seconds

            // Function to update the timer display
            function updateTimer() {
                var currentTime = new Date().getTime(); // Current time in milliseconds
                var elapsedSeconds = Math.floor((currentTime - startTime) / 1000); // Elapsed time in seconds
                var remainingSeconds = timeLimit - elapsedSeconds; // Remaining time in seconds

                // Display remaining time
                var minutes = Math.floor(remainingSeconds / 60);
                var seconds = remainingSeconds % 60;
                var timerText = minutes + ':' + (seconds < 10 ? '0' + seconds : seconds);
                $('#timer').text(timerText);

                // Check if time is up
                if (remainingSeconds <= 0) {
                    // Time's up, submit the form
                    $('#examForm').submit();
                }
            }

            // Call the updateTimer function initially
            updateTimer();

            // Call the updateTimer function every second
            setInterval(updateTimer, 1000);

            $('#nextQuestionBtn').click(function() {
                if (currentQuestion < totalQuestions - 1) {
                    $('input[name="question' + currentQuestion + '"]').each(function() {
                        if ($(this).is(':checked')) {
                            // Save the selected answer for current question
                            var answer = $(this).val();
                            // Perform any necessary operations with the answer
                            console.log('Selected answer for question ' + currentQuestion + ': ' + answer);
                        }
                    });

                    // Move to the next question
                    currentQuestion++;
                    $('.card').hide();
                    $('.card:eq(' + currentQuestion + ')').show();
                } else {
                    // Last question, submit the form
                    $('#examForm').submit();
                }
            });

            // Handle form submission
            $('#examForm').submit(function(e) {
                e.preventDefault();
                // Perform any necessary operations before ending the test

                console.log('Test ended');
                // You can redirect to another page or display a message indicating the test has ended
                window.close();
            });
        });

    </script>
</body>

</html>